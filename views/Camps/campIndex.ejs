<% layout('layout/boilerplate') %>
<script src='https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.js'></script>
<link href='https://api.mapbox.com/mapbox-gl-js/v2.14.1/mapbox-gl.css' rel='stylesheet' />



<div id="map" style="width: 100%; height: 430px;">
</div>

<div class="container mt-4">
    <% for(let camp of camps) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(camp.image.length){ %>
                    <img class="img-fluid img-thumbnail customImage" src="<%=camp.image[0].url %>" alt="">
                   <% }else{ %>
                    <img class="img-fluid img-thumbnail" src="https://images.unsplash.com/photo-1601618613229-ec7645fad6fa?auto=format&fit=crop&q=80&w=3174&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D" alt="">

                    <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.name %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a href="/camps/<%=camp._id  %>" class="btn btn-primary"> View <%= camp.name %></a>
                    </div>
                </div>
            </div>
        </div>


        <% } %>

    </div>
        <script>
            const maptoken = '<%- process.env.MAPBOX_TOKEN %>';
            const campMaps = {"features" :<%- JSON.stringify(camps) %>}
        </script>

        <script src="/js/clusterMaps.js"></script>